<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cass?useUnicode=true&amp;characterEncoding=utf8</property>
    <property name="hibernate.connection.username">cass</property>
    <property name="hibernate.connection.password">cass</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="c3p0.min_size">5</property>
    <property name="c3p0.max_size">100</property>
    <property name="c3p0.timeout">300</property>
    <property name="c3p0.preferredTestQuery">SELECT 1</property>
    <property name="c3p0.testConnectionOnCheckout">true</property>
    <property name="c3p0.idle_test_period">60</property>

    <property name="hibernate.current_session_context_class">thread</property>
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <property name="cache.use_query_cache">false</property>
    <property name="cache.use_minimal_puts">false</property>
    <property name="max_fetch_depth">10</property>

    <property name="show_sql">false</property>

    <property name="hibernate.hbm2ddl.auto">update</property>
    
